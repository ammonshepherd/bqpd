<p id="notice"><%= notice %></p>

[ <%= link_to 'Projects List', projects_path %> ]

<div class="project-title">
  <ul class="project-menu">
    <li><i class="fa fa-pencil-square-o"></i> <%= link_to '', edit_project_path(@project) %> </li>
    <li><i class="fa fa-times"></i> <%= link_to '', @project, method: :delete, data: { confirm: 'Are you sure?' } %></li>
  </ul>
  <h1><%= @project.title %></h1>
  <p> <%= @project.description %> </p>
</div>


<table class="pure-table pure-table-horizontal pure-table-striped">
  <thead>
    <tr>
      <th colspan="2"><h2>Available Tasks</h2></th>
    </tr>
  </thead>

  <tbody>
    <% @project.tasks.each do | task | %>
      <tr>
        <td>
          <h3><%= link_to task.title, edit_task_path(task) %></h3>
          <p><%= task.description %></p>
        </td>

        <td>
          <p><%= link_to 'RUN', deploy_path(@project), class: 'pure-button button-success button-xlarge' %></p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



<% @project.jobs.each do | job | %>
  <p><%= job.title %> </p>
<% end %>
